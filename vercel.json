{
  "version": 2,
  "name": "weong-bulletin-l3",
  "cleanUrls": true,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "engine/*.js", "use": "@vercel/static" },
    { "src": "data/nl/communities.json", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/engine/(.*).js",
      "headers": { 
        "Cache-Control": "no-store, must-revalidate",
        "Access-Control-Allow-Origin": "*" 
      },
      "continue": true
    },
    {
      "src": "/data/nl/communities.json",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Cache-Control": "public, max-age=3600"
      },
      "continue": true
    },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
